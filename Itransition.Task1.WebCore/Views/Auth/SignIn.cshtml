@model Itransition.Task1.WebCore.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Sign In</title>
    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/css/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body class="login-page">

<div class="login-box">

    <div class="card">
        <div class="body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "sign_in" }))
            {
                @Html.AntiForgeryToken()
                <div class="msg">Sign in to start your session</div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">email</i>
                    </span>
                    <div class="form-line">
                        @Html.EditorFor(m => m.Email, new {htmlAttributes = new {@class = "form-control", type = "email", name = "email", placeholder = "Email", autofocus = "autofocus"}})
                    </div>
                </div>

                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control", placeholder = "Password", minlength = "3"}})
  
                    </div>
                </div>
                <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">SIGN IN</button>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="text-danger">
                            @Html.ValidationSummary(true)
                        </div>
                    </div>
                </div>

                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                        <a>@Html.ActionLink("Register Now!", "SignUp", "Auth")</a>
                    </div>
                    <div class="col-xs-6 align-right">
                        <a>@Html.ActionLink("Forgot Password?", "Forgot", "Password")</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/sweetalert.min.js"></script>
<script src="~/js/waves.min.js"></script>
<script src="~/js/form-validation.js"></script>
<script src="~/js/sign-in.js"></script>

</body>
</html>